<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="/Semantic-UI-CSS-master/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/particles.js-master/css/style.css">
        <base href="">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div class="two wide column computer only">
        <div class="ui top fixed inverted menu">
            <div class="ui pointing dropdown link item">
                <span class="text">{{ os.name }}</span>
                <i class="dropdown icon"></i>
                <div class="menu">
                    <div class="header">System</div>
                    <div class="item">
                        <i class="dropdown icon"></i>
                        <span class="text">{{ os.name }}</span>
                        <div class="menu">
                            <div class="item">Users & Groups</div>
                            <div class="item">Services</div>
                            <div class="item">CPU</div>
                        </div>
                    </div>
                    <div class="divider"></div>
                    <div class="header">File Statistics</div>
                    <div class="item">
                        <i class="dropdown icon"></i>
                        <span class="text">Files</span>
                        <div class="menu">
                            <div class="item">Image Files</div>
                            <div class="item">Text Documents</div>
                            <div class="item">Hard Disks</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            {#<div class="item">#}
                {#<div class="header">{{ os.name }}</div>#}
                {#<div class="menu">#}
                    {#<a class="item">Users & Groups</a>#}
                    {#<a class="item">Services</a>#}
                    {#<a class="item">CPU</a>#}
                    {#<a class="item">Hard Disks</a>#}
                {#</div>#}
            {#</div>#}
            {#<div class="item">#}
                {#<div class="header">Security</div>#}
                {#<div class="menu">#}
                    {#<a class="item">Kernel</a>#}
                    {#<a class="item">Gufw Logs</a>#}
                    {#<a class="item">Ufw Logs</a>#}
                {#</div>#}
            {#</div>#}
            {#<div class="item">#}
                {#<div class="header">Package & Files</div>#}
                {#<div class="menu">#}
                    {#<a class="item">DPKG Logs</a>#}
                    {#<a class="item">Binary Files</a>#}
                {#</div>#}
            {#</div>#}
        </div>
    <div id="particles-js"></div>
        {% block body %}{% endblock %}
    <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script src="/particles.js-master/particles.js"></script>
    <script src="/particles.js-master/js/app.js"></script>">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js" integrity="sha256-vyehT44mCOPZg7SbqfOZ0HNYXjPKgBCaqxBkW3lh6bg=" crossorigin="anonymous"></script>
    <script src="/Semantic-UI-CSS-master/semantic.min.js"></script>
    <script src="/js/filescharts.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
